    <!-- 1. Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- 2. Lucide Icons CDN -->
    <script src="https://unpkg.com/lucide@latest"></script>

    

    <!-- 3. Configuration du thème (couleurs custom) -->
    <style>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary': '#4f46e5',
                        'primary-dark': '#4338ca',
                        'card-bg': '#1f2937',
                        'body-bg': '#111827',
                    }
                }
            }
        }
    </style>

    {% block stylesheets %}
    {# Vos feuilles de style spécifiques au besoin #}
    {% endblock %}

    {% block javascripts %}
    {# Vos scripts spécifiques au besoin #}
    {% endblock %}
</head>
<body class="bg-body-bg min-h-screen">
    {% block body %}{% endblock %}
</body>


</html>