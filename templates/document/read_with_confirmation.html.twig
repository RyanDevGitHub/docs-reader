{% extends 'base.html.twig' %}

{% block title %}Lecture : {{ document.title }}{% endblock %}

{% block body %}
    <div class="min-h-screen bg-slate-50 dark:bg-slate-950 transition-colors duration-300">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
            
            <div class="bg-white dark:bg-slate-900 shadow-md rounded-2xl p-5 sm:p-6 mb-6 border-l-4 border-primary">
                <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                    <div>
                        <h2 class="text-2xl sm:text-3xl font-extrabold text-slate-900 dark:text-white leading-tight">
                            {{ document.title }}
                        </h2>
                        <p class="text-slate-500 dark:text-slate-400 mt-1 text-sm sm:text-base">
                            Veuillez prendre connaissance du document ci-dessous.
                        </p>
                    </div>
                    {% if delivery.readAt %}
                        <div class="flex-shrink-0">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 border border-green-200 dark:border-green-800">
                                <i data-lucide="check-circle-2" class="w-4 h-4 mr-1.5"></i> Lu le {{ delivery.readAt|date('d/m/Y') }}
                            </span>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="relative bg-slate-200 dark:bg-slate-800 border border-slate-300 dark:border-slate-700 rounded-2xl shadow-2xl overflow-hidden mb-6" 
                 style="height: 70vh; min-height: 450px;">
                <iframe 
                    src="{{ path('read_document_file', { token: token }) }}#view=FitH" 
                    class="w-full h-full"
                    style="border: none;"
                    title="Document PDF">
                </iframe>
                <div class="absolute bottom-4 right-4 sm:hidden bg-slate-900/50 backdrop-blur-md text-white p-2 rounded-full animate-bounce">
                    <i data-lucide="mouse-pointer-2" class="w-4 h-4"></i>
                </div>
            </div>

            <div class="sticky bottom-4 sm:static">
                {% if not delivery.readAt %}
                    <form action="{{ path('confirm_read', { token: token }) }}" method="post">
                        <button type="submit" 
                                class="w-full inline-flex items-center justify-center px-6 py-4 border border-transparent text-lg sm:text-xl font-bold rounded-2xl shadow-xl text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-4 focus:ring-primary/50 transition-all duration-300 transform active:scale-[0.98]">
                            <i data-lucide="check-square" class="w-6 h-6 mr-3"></i>
                            Confirmer la lecture du document
                        </button>
                    </form>
                {% else %}
                    <div class="w-full p-4 sm:p-5 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800/50 text-green-800 dark:text-green-300 rounded-2xl text-center font-medium shadow-sm flex items-center justify-center">
                        <i data-lucide="party-popper" class="w-5 h-5 mr-3 text-green-500"></i>
                        Validation enregistrée le {{ delivery.readAt|date('d/m/Y à H:i') }}
                    </div>
                {% endif %}
            </div>

            <div class="mt-8 text-center">
                <a href="{{ path('admin_document_index') }}" class="text-sm font-medium text-slate-500 dark:text-slate-400 hover:text-primary transition-colors flex items-center justify-center">
                    <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i>
                    Retour au catalogue
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        // Initialisation des icônes pour cette page spécifique
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    </script>
{% endblock %}