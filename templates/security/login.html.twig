{% extends 'base.html.twig' %}

{% block title %}Connexion | Collaborateur{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center p-4 sm:p-6">
    <div class="w-full max-w-md bg-white dark:bg-slate-900 shadow-xl dark:shadow-2xl rounded-2xl p-6 sm:p-8 border border-slate-200 dark:border-slate-800 transition-all">

        <div class="text-center mb-6 sm:mb-8">
            <div class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-primary/10 mb-4">
                <i data-lucide="shield-check" class="w-8 h-8 text-primary"></i>
            </div>
            <h2 class="text-2xl sm:text-3xl font-extrabold text-slate-900 dark:text-white">Connexion</h2>
            <p class="text-slate-500 dark:text-slate-400 text-sm mt-2">Accédez à votre espace sécurisé.</p>
        </div>

        {% if error %}
            <div class="bg-red-50 dark:bg-red-900/30 text-red-600 dark:text-red-400 p-3 rounded-xl mb-6 text-sm flex items-start" role="alert">
                <i data-lucide="alert-circle" class="w-5 h-5 mr-2 flex-shrink-0"></i>
                <span>Identifiants invalides. Veuillez réessayer.</span>
            </div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}" class="space-y-5">
            <div>
                <label for="inputEmail" class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-1.5">Email</label>
                <input type="email" 
                       value="{{ last_username }}" 
                       name="email" 
                       id="inputEmail" 
                       required autofocus 
                       class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-800 border border-slate-300 dark:border-slate-700 rounded-xl text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition duration-150 text-base"
                       placeholder="nom@entreprise.com">
            </div>
            
            <div>
                <label for="inputPassword" class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-1.5">Mot de passe</label>
                <input type="password" 
                       name="password" 
                       id="inputPassword" 
                       required
                       class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-800 border border-slate-300 dark:border-slate-700 rounded-xl text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition duration-150 text-base"
                       placeholder="••••••••">
            </div>

            <div class="flex items-center justify-between">
                <label class="flex items-center cursor-pointer group">
                    <input type="checkbox" name="_remember_me" class="w-4 h-4 text-primary border-slate-300 dark:border-slate-700 rounded focus:ring-primary bg-slate-50 dark:bg-slate-800">
                    <span class="ml-2 text-sm text-slate-500 dark:text-slate-400 group-hover:text-slate-700 dark:group-hover:text-slate-200">Se souvenir</span>
                </label>
                
                <a href="#" class="text-sm font-medium text-primary hover:text-primary-dark">Oublié ?</a>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" 
                    class="w-full py-3.5 px-4 bg-primary text-white font-bold rounded-xl shadow-lg shadow-primary/25 hover:bg-primary-dark transition duration-200 active:scale-[0.98] flex items-center justify-center">
                <i data-lucide="log-in" class="w-5 h-5 mr-2"></i>
                Se connecter
            </button>
        </form>
        
        <p class="mt-8 text-center text-xs text-slate-400 dark:text-slate-500">
            &copy; {{ "now"|date("Y") }} Ochyro. Sécurisé par SSL.
        </p>
    </div>
</div>
{% endblock %}