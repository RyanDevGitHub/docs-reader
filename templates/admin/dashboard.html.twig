{% extends 'base.html.twig' %}

{% block title %}Suivi des Documents | Admin{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto p-4 sm:p-6 lg:p-8">
    <header class="mb-8 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
            <h1 class="text-3xl sm:text-4xl font-extrabold text-slate-900 dark:text-white tracking-tight flex items-center">
                <i data-lucide="bar-chart-3" class="w-8 h-8 mr-3 text-primary"></i>
                Suivi Admin
            </h1>
            <p class="text-slate-500 dark:text-slate-400 mt-2 text-sm hidden sm:block">Analyse de la lecture en temps réel.</p>
        </div>

        <div class="flex flex-col sm:flex-row gap-3">
             <a href="{{ path('admin_document_index') }}" class="inline-flex items-center px-4 py-2.5 border border-slate-300 dark:border-slate-700 text-sm font-medium rounded-xl text-slate-700 dark:text-slate-300 bg-white dark:bg-slate-800 hover:bg-slate-50 dark:hover:bg-slate-700 transition duration-200 justify-center shadow-sm">
                <i data-lucide="layout-grid" class="w-4 h-4 mr-2"></i>
                Catalogue
            </a>
            <a href="{{ path('app_admin_document_new') }}" class="inline-flex items-center px-5 py-2.5 text-sm font-bold rounded-xl text-white bg-primary hover:bg-primary-dark transition duration-200 shadow-lg shadow-primary/20 justify-center">
                <i data-lucide="upload-cloud" class="w-5 h-5 mr-2"></i>
                Uploader
            </a>
        </div>
    </header>

    <div class="bg-white dark:bg-slate-900 shadow-xl rounded-2xl border border-slate-200 dark:border-slate-800 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-800">
                <thead class="bg-slate-50 dark:bg-slate-800/50">
                    <tr>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider">Document</th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider hidden sm:table-cell">Date d'Upload</th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider">Progression</th>
                        <th scope="col" class="relative px-6 py-4"><span class="sr-only">Détails</span></th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-200 dark:divide-slate-800">
                    {% for document in documents %}
                        {% set totalDeliveries = document.deliveries|length %}
                        {% set readCount = 0 %}
                        {% for delivery in document.deliveries %}
                            {% if delivery.readAt is not null %}{% set readCount = readCount + 1 %}{% endif %}
                        {% endfor %}
                        
                        {% set percentage = totalDeliveries > 0 ? (readCount / totalDeliveries) * 100 : 0 %}
                        
                        {# Couleurs dynamiques adaptées au mode sombre #}
                        {% set barColor = 'bg-slate-300 dark:bg-slate-700' %}
                        {% set textStatus = 'text-slate-500 dark:text-slate-400' %}
                        
                        {% if percentage == 100 %}
                            {% set barColor = 'bg-green-500' %}
                            {% set textStatus = 'text-green-600 dark:text-green-400' %}
                        {% elseif percentage > 0 %}
                            {% set barColor = 'bg-amber-500' %}
                            {% set textStatus = 'text-amber-600 dark:text-amber-400' %}
                        {% endif %}
                        
                        <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 transition duration-150 group">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-bold text-slate-900 dark:text-white">{{ document.title }}</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400 hidden sm:table-cell">
                                {{ document.createdAt|date('d/m/Y') }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex flex-col gap-1.5">
                                    <div class="flex items-center justify-between text-xs font-bold {{ textStatus }}">
                                        <span>{{ readCount }} / {{ totalDeliveries }}</span>
                                        <span>{{ percentage|round(0) }}%</span>
                                    </div>
                                    <div class="w-full sm:w-32 lg:w-48 bg-slate-200 dark:bg-slate-700 rounded-full h-2">
                                        <div class="h-2 rounded-full {{ barColor }} transition-all duration-500" style="width: {{ percentage|round(0) }}%"></div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a href="{{ path('admin_document_detail', {'id': document.id}) }}" class="inline-flex items-center px-3 py-1.5 rounded-lg text-primary bg-primary/10 hover:bg-primary group-hover:bg-primary group-hover:text-white transition duration-200 text-xs font-bold">
                                    <i data-lucide="eye" class="w-4 h-4 mr-1.5"></i>
                                    Détails
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="p-12 text-center">
                                <i data-lucide="folder-x" class="w-10 h-10 mx-auto mb-3 text-slate-400"></i>
                                <p class="text-slate-500 dark:text-slate-400">Aucune statistique à afficher.</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}