{% extends 'base.html.twig' %}

{% block title %}Lecture : {{ document.title }}{% endblock %}

{% block body %}
    <div class="min-h-screen bg-slate-50 dark:bg-slate-950 transition-colors duration-300">
        <div class="max-w-5xl mx-auto px-3 sm:px-6 lg:px-8 py-6 sm:py-10">
            
            <header class="mb-6">
                <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 bg-white dark:bg-slate-900 p-5 rounded-2xl shadow-sm border border-slate-200 dark:border-slate-800">
                    <div class="flex-1">
                        <h2 class="text-2xl sm:text-3xl font-black text-slate-900 dark:text-white leading-tight italic">
                            {{ document.title }}
                        </h2>
                        <p class="text-slate-500 dark:text-slate-400 mt-1 text-sm sm:text-base flex items-center">
                            <i data-lucide="info" class="w-4 h-4 mr-2 text-primary"></i>
                            Veuillez lire le document pour valider.
                        </p>
                    </div>

                    {% if delivery.readAt %}
                        <div class="flex-shrink-0">
                            <span class="inline-flex items-center px-4 py-2 rounded-xl text-xs font-bold bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 border border-green-200 dark:border-green-800">
                                <i data-lucide="check-circle" class="w-4 h-4 mr-2"></i>
                                Déjà validé
                            </span>
                        </div>
                    {% endif %}
                </div>
            </header>

            <div class="relative bg-slate-200 dark:bg-slate-800 border-2 border-slate-300 dark:border-slate-700 rounded-3xl shadow-2xl overflow-hidden mb-8" 
                 style="height: 75vh; min-height: 500px;">
                
                <iframe 
                    src="{{ path('read_document_file', { token: token }) }}" 
                    class="w-full h-full"
                    style="border: none;"
                    title="Document PDF">
                </iframe>

                <div class="absolute bottom-6 right-6 sm:hidden pointer-events-none">
                    <div class="bg-primary/90 text-white p-3 rounded-full shadow-lg animate-bounce">
                        <i data-lucide="chevrons-up-down" class="w-5 h-5"></i>
                    </div>
                </div>
            </div>

            <div class="max-w-2xl mx-auto">
                {% if not delivery.readAt %}
                    <form action="{{ path('confirm_read', { token: token }) }}" method="post">
                        <button type="submit" 
                                class="group w-full inline-flex items-center justify-center px-8 py-5 border border-transparent text-lg sm:text-xl font-black rounded-2xl shadow-xl text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-4 focus:ring-primary/50 transition-all duration-300 transform active:scale-95">
                            <i data-lucide="check-square" class="w-6 h-6 mr-3 group-hover:scale-110 transition-transform"></i>
                            J'ai lu ce document et je confirme
                        </button>
                    </form>
                {% else %}
                    <div class="w-full p-6 bg-green-50 dark:bg-green-900/10 border-2 border-green-200 dark:border-green-800/40 text-green-800 dark:text-green-300 rounded-2xl text-center font-bold flex flex-col items-center gap-2">
                        <div class="h-10 w-10 rounded-full bg-green-100 dark:bg-green-900/50 flex items-center justify-center">
                            <i data-lucide="party-popper" class="w-5 h-5 text-green-600"></i>
                        </div>
                        Lecture confirmée le {{ delivery.readAt|date('d/m/Y à H:i') }}
                    </div>
                {% endif %}
            </div>

        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', () => {
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    });
</script>
{% endblock %}